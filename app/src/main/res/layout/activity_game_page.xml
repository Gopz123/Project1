<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".gamePage"
    android:orientation="vertical"
    android:id="@+id/layout1"
    android:background="@drawable/gamepage_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <NumberPicker
            android:id="@+id/numbers1"
            android:layout_width="83dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/bull_background_logo"
            android:scrollbarSize="50dp"
            android:clickable="false"
            android:theme="@style/NumberPickerTheme" />

        <NumberPicker
            android:id="@+id/numbers2"
            android:layout_width="83dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/bull_background_logo"
            android:scrollbarSize="50dp"
            android:theme="@style/NumberPickerTheme" />

        <NumberPicker
            android:id="@+id/numbers3"
            android:layout_width="83dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/bull_background_logo"
            android:scrollbarSize="50dp"
            android:theme="@style/NumberPickerTheme" />
        <NumberPicker
            android:id="@+id/numbers4"
            android:layout_width="83dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/bull_background_logo"
            android:scrollbarSize="50dp"
            android:theme="@style/NumberPickerTheme" />
        <NumberPicker
            android:id="@+id/numbers5"
            android:layout_width="83dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/bull_background_logo"
            android:scrollbarSize="50dp"
            android:theme="@style/NumberPickerTheme" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/bullbutton"
        android:layout_width="136dp"
        android:layout_height="141dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button"/>
    <ScrollView
        android:id="@+id/scrlv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/testingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="50dp"/>


</LinearLayout>